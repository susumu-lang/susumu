{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Susumu",
  "scopeName": "source.susumu",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#match-expressions"
    },
    {
      "include": "#return-statements"
    },
    {
      "include": "#multiline-flows"
    },
    {
      "include": "#arrow-operations"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.susumu",
          "begin": "//",
          "end": "$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.susumu",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.susumu",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "match-expressions": {
      "patterns": [
        {
          "name": "meta.match.expression.susumu",
          "match": "\\bmatch\\s*\\{",
          "captures": {
            "0": { "name": "keyword.control.match.susumu" }
          }
        },
        {
          "name": "meta.match.case.susumu",
          "match": "\\b(success|error|some|none)\\s*(<-)\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s*(->)\\s*\\{",
          "captures": {
            "1": { "name": "keyword.other.pattern.susumu" },
            "2": { "name": "keyword.operator.arrow.susumu" },
            "3": { "name": "variable.other.binding.susumu" },
            "4": { "name": "keyword.operator.arrow.susumu" }
          }
        }
      ]
    },
    "return-statements": {
      "patterns": [
        {
          "name": "meta.return.statement.susumu",
          "match": "\\b(return|error)\\s*(<-)\\s*([^\\n]+)",
          "captures": {
            "1": { "name": "keyword.control.susumu" },
            "2": { "name": "keyword.operator.arrow.susumu" },
            "3": { "patterns": [{ "include": "#expressions" }] }
          }
        }
      ]
    },
    "multiline-flows": {
      "patterns": [
        {
          "name": "meta.arrow.flow.susumu",
          "match": "^\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s*(->|<-)\\s*$",
          "captures": {
            "1": { "name": "variable.other.susumu" },
            "2": { "name": "keyword.operator.arrow.susumu" }
          }
        },
        {
          "name": "meta.arrow.flow.susumu", 
          "match": "^\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s*(->|<-)\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s*(->|<-)\\s*([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "variable.other.susumu" },
            "2": { "name": "keyword.operator.arrow.susumu" },
            "3": { "name": "entity.name.function.susumu" },
            "4": { "name": "keyword.operator.arrow.susumu" },
            "5": { "name": "entity.name.function.susumu" }
          }
        }
      ]
    },
    "arrow-operations": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.susumu",
          "match": "->|<-"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "meta.function.definition.susumu",
          "begin": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "beginCaptures": {
            "1": { "name": "entity.name.function.definition.susumu" }
          },
          "end": "\\)",
          "patterns": [
            {
              "name": "variable.parameter.susumu",
              "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
            }
          ]
        },
        {
          "name": "support.function.builtin.susumu",
          "match": "\\b(print|add|multiply|validateOrder|enrichWithDefaults|calculateTotals|sendConfirmation|logSuccess|logError)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.susumu",
          "match": "\\b(i|ei|e|fe|w|return|error|main|match)\\b"
        },
        {
          "name": "keyword.other.pattern.susumu", 
          "match": "\\b(success|some|none|valid|found)\\b"
        },
        {
          "name": "constant.language.susumu",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.susumu",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.property.susumu",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\.[a-zA-Z_][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "variable.other.susumu",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "expressions": {
      "patterns": [
        { "include": "#strings" },
        { "include": "#numbers" },
        { "include": "#identifiers" },
        {
          "name": "keyword.operator.arithmetic.susumu",
          "match": "\\+|\\-|\\*|\\/|%"
        }
      ]
    }
  }
}